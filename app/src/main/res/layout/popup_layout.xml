<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_gravity="center"
    android:background="@drawable/filter_popup_bg"
    android:padding="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:gravity="center"
            android:text="筛 选" />

        <ImageView
            android:id="@+id/close_popup"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="6dp"
            android:src="@mipmap/cha" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        android:background="#ababab"/>

    <LinearLayout
        android:id="@+id/AllCarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="所有车型" />

        <ImageView
            android:id="@+id/all_car"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/gou"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/GDCCarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="高铁动车(G/D/C)" />
        <ImageView
            android:id="@+id/gdc_car"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:src="@mipmap/gou"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/KCarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="普通火车" />
        <ImageView
            android:id="@+id/k_car"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:visibility="gone"
            android:src="@mipmap/gou"/>
    </LinearLayout>
</LinearLayout>
