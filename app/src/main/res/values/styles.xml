<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_bg_color</item>
        <item name="colorPrimaryDark">@color/title_bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditLineColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edit_line_coloe</item>
        <item name="colorControlActivated">@color/title_bg_color</item>
    </style>

    <style name="framework_longrise_alertdialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item> <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
    </style>

    <!-- 对话框样式 -->
    <style name="longrise_translucent_dialog_style" >
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialogBg</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
    </style>
</resources>
